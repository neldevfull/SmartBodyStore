<html>
	<div class="container">
		<%= form_for Product.new do |f| %>
			<table class="table">
				<tr>
					<td><label for="name">Name</label></td>
					<td><input type="text" name="produto[name]"></td>
				</tr>
				<tr>
					<td><label for="description">Description</label></td>
					<td><textarea name="produto[description]"></textarea></td>
				</tr>
				<tr>
					<td><label for="price">Price</label></td>
					<td><input type="text" name="produto[price]"></td>
				</tr>
				<tr>
					<td><label for="amount" step="0.01">Amount</label></td>
					<td><input type="text" name="produto[amount]"></td>
				</tr>
				<tr>
					<td><button>Criar</button></td>
				</tr>
			</table> 
		<% end %>
	</div>
</html>