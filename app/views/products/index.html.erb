<table class="table table-bordered">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>			
		<% @products.each do |p| %>
			<tr>
				<th><%= p.name %></th>
				<th><%= p.description %></th>
				<th><%= p.price %></th>
				<th><%= p.amount %></th>
				<th><%= button_to "Remove", p,
					method: :delete,
						class: "btn btn-danger",
						data: {confirm: "Deseja deletar #{p.name}"} %></th>				
			</tr>
		<% end %>			
	</tbody>
</table>
